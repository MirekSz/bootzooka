<div>
    <div class="panel panel-info">
        <div class="panel-heading">
            <h3 class="panel-title">
                Action id: {{id}}/{{def.name}}
            </h3>
        </div>
        <div class="panel-body">
            <div class="row">
                <div class="col-xs-6">
                    Input sockets:
                    <ul>
                        {{#inputSocketDefList}}
                            <li>{{name}}</li>
                        {{/inputSocketDefList}}
                    </ul>
                </div>
                <div class="col-xs-6">
                    Output sockets:
                    <ul>
                        {{#outputSocketDefList}}
                            <li>{{name}}</li>
                        {{/outputSocketDefList}}
                    </ul>
                </div>
            </div>
            <button class="btn btn-success click">Send</button>
            <button class="btn btn-info refresh">Reftesh</button>
            <textarea class="form-control"/>
        </div>
    </div>
</div>